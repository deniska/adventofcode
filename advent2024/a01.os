СортироватьМассив(Числа1);
СортироватьМассив(Числа2);

Количество = Числа1.Количество();
Результат1 = 0;
Результат2 = 0;

Для й = 0 По Количество - 1 Цикл
    ч = Числа1[й] - Числа2[й];
    Результат1 = Результат1 + ?(ч >= 0, ч, -ч);
    к = Количества.Получить(Числа1[й]);
    Результат2 = Результат2 + Числа1[й] * ?(к = Неопределено, 0, к);
