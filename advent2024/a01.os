Текст.Открыть(АргументыКоманднойСтроки[0]);
Строка = Текст.ПрочитатьСтроку();
Пока Строка <> Неопределено Цикл
    Элементы = СтрРазделить(Строка, " ", Ложь);
    Если Элементы.Количество() = 0 Тогда Продолжить; КонецЕсли;
    Числа1.Добавить(Число(Элементы[0]));
    Числа2.Добавить(Число(Элементы[1]));
    к = Количества.Получить(Число(Элементы[1]));
    Количества.Вставить(Число(Элементы[1]), ?(к = Неопределено, 0, к) + 1);
